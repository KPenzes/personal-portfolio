<div class="container">
  <div class="row justify-content-center">
    <% @projects.each do |project| %>
        <div class="card card-home project-card col-11 col-lg-5">
            <div class="project-details">

              <div class="details-flex">
                <div class="card-title">
                  <p><%= project.name %></p>
                </div>
                <div class="label">
                  <p><%= project.label %> project</p>
                </div>
              </div>

              <div class="details-flex">
                <p><%= project.tagline %></p>
                <% if project.end_date.present? %>
                  <p><%= project.start_date.to_formatted_s(:short) %> - <%= project.end_date.to_formatted_s(:short) %></p>
                <% else %>
                  <p><%= project.start_date.to_formatted_s(:short) %> - present </p>
                <% end %>
              </div>
            </div>

            <p><%= project.description %></p>
          <%= link_to "View details", project_path(project), class:"btn card-button" %>
        </div>
    <% end %>
  </div>

</div>
