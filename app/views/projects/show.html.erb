<div class="container">
  <div class="row justify-content-center">
    <div class="card card-height col-11 col-lg-6">
      <div class="project-details">
        <div class="details-flex">
          <h1><%= @project.name %></h1>
          <div class="label">
            <p><%= @project.label %> project</p>
          </div>
        </div>
        <div class="details-flex">
          <p><%= @project.tagline %></p>
          <% if @project.end_date.present? %>
            <p><%= @project.start_date.to_formatted_s(:short) %> - <%= @project.end_date.to_formatted_s(:short) %></p>
          <% else %>
            <p><%= @project.start_date.to_formatted_s(:short) %> - present </p>
          <% end %>
        </div>
      </div>
        <h5>Description</h5>
          <p><%= @project.description %></p>
        <div class="d-flex justify-content-center mb-10">
          <%= link_to @project.name, @project.project_url, class:"btn small-btn mb-2" %>
          <%= link_to "GitHub", @project.github_url, class:"btn small-btn mb-2" %>
        </div>

      <% unless @project.features.empty? %>
        <div class="project-details mt-15">
          <h5>Features</h5>
        </div>
        <ul>
          <% @project.features.each do |feature| %>
            <li><%= feature %></li>
          <% end %>
        </ul>
      <% end %>

        <div class="project-details mt-15">
          <h5>Languages</h5>
        </div>
        <ul>
          <% @project.language.each do |language| %>
            <li><%= language %></li>
          <% end %>
        </ul>
    </div>

    <% unless @project.photos.empty? %>
      <div class="card card-align col-11 col-lg-4">
        <% @project.photos.each do |photo| %>
          <%= cl_image_tag photo.key, alt:"Homepage of project", class:"screenshot" %>
        <% end %>
      </div>
    <% end %>
  </div>
